                        <p class="text-center text-danger"><%= message %></p>
                    <% } %>
                    <form class="delete-Room-form" action="" method="post" enctype="multipart/form-data">
                        <div class="form-row">
                            <select name="room_dropdown" id="room-dropdown" style="border-color: #ced4da; border-width: 1px;">
                                    <% room.forEach((room, deleteroom) => { %>
                                        <option name="room_dropdown" id="room-dropdown"><%= room.RoomName %></option>
                                    <% }) %>
                                </select>
                        </div>
                        
                        <button type="submit" class="btn btn-primary float-right">Delete Room</button>
                    </form>
                </div>

        </div>
