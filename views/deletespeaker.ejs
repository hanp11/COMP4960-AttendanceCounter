<!DOCTYPE html>
<html lang="en-US">

<% include ../partials/header.ejs %>
        <ul id="menuTabs" class="nav nav-tabs nav-fill" role="tablist">
            <li class="nav-item">
                <a id="rooms-tab" class="nav-link" href="addroom" >Rooms</a>
            </li>
            <li class="nav-item">
                <a id="speakers-tab" class="nav-link active" href="addspeaker" >Speakers</a>
            </li>
            <li class="nav-item">
                <a id="timeSlots-tab" class="nav-link" href="addtime" >Time Slots</a>
            </li>
            <li class="nav-item">
                <a id="sessions-tab" class="nav-link" href="addsession" >Sessions</a>
            </li>
        </ul>
        <div id="menuTabsContent" class="tab-content">
            <div class="tab-pane fade show active" id="speaker" role="tabpanel">
            <h1>Speakers</h1>
        
            <ul class="nav nav-pills">
                        <li class="nav-item">
                            <a class="nav-link" href="addspeaker">Add</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="editspeaker">Edit</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="deletespeaker">Delete</a>
                        </li>
                
            </ul>
            <div class="container">
                    <% if (message != '') { %>
                        <p class="text-center text-danger"><%= message %></p>
                    <% } %>
                    <form class="delete-Speaker-form" action="" method="post" enctype="multipart/form-data">
                        <label>Select a speaker to delete:</label><br/>
                        <div class="form-row formTable">
                            <select name="speaker_dropdown" class="selectpicker" onchange="showFields()" id="speaker-dropdown" data-width="500px" title="-Select a Speaker-">
                                    <% speaker.forEach((speaker, deletespeaker) => { %>
                                        <option name="speaker_dropdown" id="speaker-dropdown"><%= speaker.Email %></option>
                                    <% }) %>
                                </select>
                        </div>
                        <div class="form-row formTable">
                            <button type="submit" class="btn btn-primary delete hiddenFields">Delete Speaker</button>                    </form>
                        </div>
                </div>

        </div>
  </body>
</html>