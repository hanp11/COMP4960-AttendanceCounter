<div class="table-wrapper">
    <p class="text-center">Go <a href="/addroom" >here</a> to add data.</p>
    <!-- Current Room Data -->
    <% if (room.length > 0) {%>
        <table class="table table-hovered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Room ID</th>
                    <th scope="col">Room Name</th>
                    <th scope="col">Capactiy</th>
                </tr>
            </thead>
            <tbody>
                <% room.forEach((room, index) => { %>
                    <tr>
                        <td><%= room.RoomID %></td>
                        <td><%= room.RoomName %></td>
                        <td><%= room.Capacity %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p class="text-center">No room found</p>
    <% } %>
    <!-- Current Speaker Data -->
    <% if (speaker.length > 0) {%>
        <table class="table table-hovered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Speak_ID</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Email</th>
                </tr>
            </thead>
            <tbody>
                <% speaker.forEach((speaker, index) => { %>
                    <tr>
                        <td><%= speaker.SpeakerID %></td>
                        <td><%= speaker.FirstName %></td>
                        <td><%= speaker.LastName %></td>
                        <td><%= speaker.Email %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p class="text-center">No speaker found</p>
    <% } %>
    <!-- Current Time Data -->
    <% if (timepoint.length > 0) {%>
        <table class="table table-hovered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">TimePointID</th>
                    <th scope="col">TimePoint_Start</th>
                    <th scope="col">TimePoint_End</th>
                </tr>
            </thead>
            <tbody>
                <% timepoint.forEach((timepoint, index) => { %>
                    <tr>
                        <td><%= timepoint.TimePointID %></td>
                        <td><%= timepoint.TimePoint_Start %></td>
                        <td><%= timepoint.TimePoint_End %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p class="text-center">No timepoint found</p>
    <% } %>
    <!-- Current Session Data -->
    <% if (session.length > 0) {%>
        <table class="table table-hovered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">SessionID</th>
                    <th scope="col">TimePointID</th>
                    <th scope="col">RoomID</th>
                    <th scope="col">SpeakerID</th>
                    <th scope="col">Title</th>
                </tr>
            </thead>
            <tbody>
                <% session.forEach((session, index) => { %>
                    <tr>
                        <td><%= session.SessionID %></td>
                        <td><%= session.TimePointID %></td>
                        <td><%= session.RoomID %></td>
                        <td><%= session.SpeakerID %></td>
                        <td><%= session.Title %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p class="text-center">No session found</p>
    <% } %>
</div>
</div>
</body>
</html>